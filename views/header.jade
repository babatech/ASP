                if user.status && user.status === false
                    li.login-click.dropdown
                        a(href="#login",data-toggle="dropdown").dropdown-toggle login
                        div.dropdown-menu.dropdown-login
                            div.dropdown-header
                                h4 Login
                            div.dropdown-body
                                 div.col-md-12
                                     form(action="#",method="POST")
                                         div.form-group
                                             label Username
                                             input(type="text",name="username").form-control
                                             p.help-block Please enter your username here
                                         div.form-group
                                             label Password
                                             input(type="password",name="password").form-control
                                         div.checkbox
                                             label remember me
                                                input(type="checkbox",name="rememberme")
                                         button.btn.btn-primary.btn-block(type="submit") login
                                         hr
                                         a.btn.btn-block.btn-login-facebook(href="#") Login with
                                         f
                else
                    li.login-click.dropdown
                        a(href="#login",data-toggle="dropdown").dropdown-toggle login
                        div.dropdown-menu
                            div.dropdown-header
                                h4 Login
                            div.dropdown-body
                                div.col-md-12
                                    a(href="#logout").btn.btn-default.logout-click logout

                    li.userdetail
                        p #{user.username}

