extends layout
block content
  div.container
    div.row
      div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-12
        div#form
          form(name="userRegisterForm",action="#{header.baseurl}/signup",method="POST")#userRegisterForm.userRegisterForm
            div.form-group
              label Email
              input(type="email",name="email").form-control
              p.help-block Please enter your username here
            div.form-group
              label Password
              input(type="password",name="password").form-control
            div.checkbox
              label.checkbox I accept terms and condition for using the site
                input(type="checkbox",name="rememberme")
            button.btn.btn-primary.btn-block(type="submit") Register


