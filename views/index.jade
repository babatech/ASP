extends layout

block content
  div.container
    div.row.map-city-panel
      div.col-md-12
        a.btn.btn-primary.toggle-map-plan-panel.get-current-location(datatype=".map-plan-panel") Use my current location
        hr
        form(action="",method=post)
          div.form-group
            div.col-sm-4.col-md-3.col-lg-2
              label.control-label(for="searchcity")
            div.col-sm-4
              input.form-control(type="text")#searchcity
            div.col-sm-2
            a.btn.btn-success.toggle-map-plan-panel.get-search-city(datatype=".map-plan-panel") select city


    div.row.map-plan-panel
      div.col-md-12
        h1= title
      div.col-md-6
        div.full-height.full-width
          div#map
        div.route-info-box#directions-panel
      div.col-md-6
        form(action="",method=post)
          div.panel-group
            div.panel.panel-primary.add-after-panel
              div.panel-heading
                h2#startingtitle Startinf point
              div.panel-body
                p#startingdescription
                a.btn.btn-success.make-route.hidden Make route
            div.place-select-list.well(style="max-height: 300px;overflow: auto;")
              ul#check-list-box.list-group.checked-list-box.place-select-list-checkbox
            div.panel.panel-primary
              div.panel-heading
                h2#endingtitle ending point
              div.panel-body
                p#endingdescription
      div.col-md-12
